{
  "name": "whistle.wisdom-dev",
  "version": "1.0.0",
  "description": "Ones Project 多语言多环境配置独立开发",
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "release": "standard-version",
    "build": "npm run build:server & npm run build:client",
    "build:client": "webpack --mode=production --progress ",
    "build:server": "tsc  -p ./src/server/tsconfig.json",
    "dev:server": "tsc -w -p ./src/server/tsconfig.json",
    "dev:client:w2": "lack watch",
    "dev:client": "npm run dev:client:pack & npm run dev:client:view",
    "dev:client:pack": "webpack --mode=development --watch --progress",
    "dev:client:view": "webpack serve --config webpack.serve.config  --progress",
    "build-style": "npm run smui-theme",
    "smui-theme": "smui-theme compile src/client/smui.css -i src/client/theme"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@smui/button": "^7.0.0-beta.0",
    "@smui/dialog": "^7.0.0-beta.0",
    "@smui/form-field": "^7.0.0-beta.0",
    "@smui/layout-grid": "^7.0.0-beta.0",
    "@smui/radio": "^7.0.0-beta.0",
    "@types/jest": "^29.2.3",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.2",
    "jest": "^29.3.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "scss-loader": "^0.0.1",
    "smui-theme": "^7.0.0-beta.0",
    "style-loader": "^3.3.1",
    "svelte": "^3.53.1",
    "svelte-loader": "^3.1.4",
    "svelte-preprocess": "^4.10.7",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0"
  },
  "dependencies": {
    "@colorfuldots/svelteit": "^1.0.0-alpha.7",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "coverageReporters": [
      "lcov",
      "json-summary"
    ]
  }
}
